<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Orders</h1>
    <%= link_to "New order", new_admin_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="admin_stocks" class="min-w-full">
    <div class="flex flex-col w-full">
      <div class="overlow-x-auto sm:mx-0.5 lg:mx-0.5">
        <div class="py-2 inline-block min-w-full">
          <div class="overlow-x-auto">
            <table class="min-w-full overflow-x-scroll">
              <thead class="bg-white border-b">
                <tr>
                  <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                    Customer Email
                  </th>
                  <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                    Total Cost
                  </th>
                  <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                    Fulfilled
                  </th>
                  <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                    Actions 
                  </th>
                </tr>
              </thead>
              <tbody>
                <% @admin_orders.each do |c| %>
                  <tr class="bg-gray-50 border-b">
                    <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800 underline">
                      <%= link_to c.customer_email, admin_order_path(c)%>
                    </td>
                    <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800">
                      <%= c.total %>
                    </td>
                    <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800">
                      <%= c.fulfilled %>
                    </td>
                    <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800">
                      <%if !c.fulfilled%>
                        <%=link_to "Mark as fulfilled", admin_mark_as_fulfilled_path(c.id), class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium"%>
                      <%end%>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
